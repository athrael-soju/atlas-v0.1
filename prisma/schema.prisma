generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  email       String     @unique
  img         String?
  sageId String?
  threadId    String?
  files       UserFile[]
}

model UserFile {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  purpose String
  User    User?   @relation(fields: [userEmail], references: [id])
  userEmail  String? @db.ObjectId
}
