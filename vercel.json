{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "build": {
    "env": {
      "PYTHONUNBUFFERED": "1",
      "PIP_NO_CACHE_DIR": "off"
    },
    "pipInstallFlags": "--upgrade --no-cache-dir",
    "buildCommand": "bash ./build.sh"
  }
}
